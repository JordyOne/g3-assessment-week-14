<h1><%= full_name(@patient) %></h1>

<h2>Prescriptions</h2><a class="new-prescription-link" href="<%= new_patient_prescription_path(@patient.id) %>">Add Prescription</a>

<h2>Medications</h2>
<table class="table">
  <thead>
  <tr>
    <th>Medication</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <%= @prescriptions.each do |prescription| %>
    <td><%= prescription.name %></td>
    <td><%= prescription.dosage %>/<%=prescription.schedule %></td>
    <td><%= prescription.start_on  %></td>
 <% end %>
  </tr>
  </tbody>
</table>